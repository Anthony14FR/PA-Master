{
  "name": "@kennelo/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Kennelo monorepo - Web, Mobile, and API",
  "scripts": {
    "dev": "pnpm --filter \"@kennelo/web\" dev",
    "dev:mobile": "pnpm --filter \"@kennelo/mobile\" dev",
    "build": "pnpm --filter \"@kennelo/web\" build",
    "build:mobile": "pnpm --filter \"@kennelo/mobile\" build",
    "build:translations": "pnpm --filter \"@kennelo/traductions\" build",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive exec rm -rf node_modules .next dist build",
    "install-hooks": "bash scripts/install-hooks.sh",
    "postinstall": "pnpm install-hooks"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
